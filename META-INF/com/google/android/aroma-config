	"splash/a2", 20,
	"splash/a3", 20,
	"splash/a4", 20,
	"splash/a5", 20,
	"splash/a6", 20,
	"splash/a7", 20,
	"splash/a8", 20,
	"splash/a9", 20,
	"splash/a10", 20,
	"splash/a11", 20,
	"splash/a12", 20,
	"splash/a13", 20,
	"splash/a14", 20,
	"splash/a15", 20,
	"splash/a16", 20,
	"splash/a17", 20,
	"splash/a18", 20,
	"splash/a19", 20,
	"splash/a20", 20,
